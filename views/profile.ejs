<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head'); -%>
    <!-- Quill -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"> 
    <link rel="stylesheet" href="/profile/profile.css">
</head>

<body>
    <%- include('partials/navbar-jobseeker'); -%>
    <!-- Container -->
    <div class="container-fluid dashboard">
        <div class="row">
            <div class="left-sidebar">
                <div class="info">
                    <div id="user-avatar">
                        <img src="<%= user.avt %>" alt="">
                    </div>
                    <div class="user-name">
                        <p><%= user.name %></p>
                    </div>
                </div>
                <div class="nav-profile">
                    <ul class="nav flex-column">
                        <li class="nav-item item-slide">
                            <i class="fas fa-phone"></i>
                            <a href="" class="nav-link">Thông tin liên hệ</a>
                        </li>
                        <li class="nav-item item-slide">
                            <i class="fas fa-bullseye"></i>
                            <a href="" class="nav-link">Mục tiêu nghề nghiệp</a>
                        </li>
                        <li class="nav-item item-slide">
                            <i class="fas fa-briefcase"></i>
                            <a href="" class="nav-link">Kinh nghiệm làm việc</a>
                        </li>
                        <li class="nav-item item-slide">
                            <i class="fas fa-graduation-cap"></i>
                            <a href="" class="nav-link">Học vấn</a>
                        </li>
                        <li class="nav-item item-slide">
                            <i class="fas fa-atom"></i>
                            <a href="" class="nav-link">Kỹ năng</a>
                        </li>
                        <li class="nav-item item-slide">
                            <i class="fas fa-globe-europe"></i>
                            <a href="" class="nav-link">Ngôn ngữ</a>
                        </li>
                        <li class="nav-item item-slide">
                            <i class="fas fa-award"></i>
                            <a href="" class="nav-link">Giải thưởng</a>
                        </li>
                        <li class="nav-item item-slide">
                            <i class="fas fa-futbol"></i>
                            <a href="" class="nav-link">Sở thích</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8 main">
                <section id="contact-info">
                    <div class="heading">
                        <div class="head-title">
                            <i class="fas fa-phone"></i>
                            <p>THÔNG TIN LIÊN HỆ</p>
                        </div>

                    </div>
                    <form id="<%=user.id%>" class="form">
                        <div class="form-group form-contact">
                            <label for="">Họ tên:</label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="gender">
                            <div class="label">Giới tính: </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" id="radio-man"
                                    value="Man">
                                <label class="form-check-label" for="cb-man">Nam</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" id="radio-woman"
                                    value="Woman">
                                <label class="form-check-label" for="cb-woman">Nữ</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" id="radio-other"
                                    value="option1">
                                <label class="form-check-label" for="cb-other">Khác</label>
                            </div>
                        </div>
                        <div class="form-group form-contact">
                            <label for="">Email:</label>
                            <input type="email" class="form-control" value="<%= user.email %>" disabled>
                        </div>
                        <div class="form-group form-contact">
                            <label for="">Số điện thoại:</label>
                            <input type="text" class="form-control" name="phoneNumber">
                        </div>
                        <button  class="btn btn-post btn-primary btn-lg">Lưu</button>
                    </form>
                </section>
                <section id="goal">
                    <div class="heading">
                        <div class="head-title">
                            <i class="fas fa-bullseye"></i>
                            <p>MỤC TIÊU NGHỀ NGHIỆP</p>
                        </div>

                        <button class="btn btn-outline-primary btn-add-goal ml-5">Thêm mục tiêu nghề nghiệp</button>
                    </div>
                    <div class="description-goal">
                        <div class="quill">
                            <div class="ql-goal"></div>
                            <button class="btn btn-primary btn-save-goal">Lưu</button>
                        </div>
                        
                    </div>
                    <div class="content-goal"></div>
                </section>
                
            </div>
        </div>
    </div>
    <!-- Quill -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <%- include('partials/scripts'); -%>
    <!-- JS -->
    <script src="/profile/profile.js"></script>
</body>

</html>