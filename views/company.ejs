<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head'); -%>
    <link rel="stylesheet" href="/company/company.css">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"> 
    <title>Document</title>
</head>
<body>
    <%- include('partials/navbar-company'); -%>
    <!-- Container -->
    <div class="container-fluid dashboard">
        <div class="row">
            <div class="left-sidebar">
                <div class="info">
                    <div id="user-avatar">
                        <img src="<%= user.avt %>" alt="">
                    </div>
                    <div class="user-name">
                        <p><%= user.name %></p>
                    </div>
                </div>
                <div class="nav-profile">
                    <ul class="nav flex-column">
                        <li class="nav-item item-slide">
                            <i class="fas fa-phone"></i>
                            <a href="" class="nav-link">Thông tin liên hệ</a>
                        </li>
                        <li class="nav-item item-slide">
                            <i class="fas fa-briefcase"></i>
                            <a href="" class="nav-link">Mô tả</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8 main">
                <section id="contact-info">
                    <div class="heading">
                        <div class="head-title">
                            <i class="fas fa-phone"></i>
                            <p>THÔNG TIN LIÊN HỆ</p>
                        </div>

                    </div>
                    <form action="" id="<%=user.id%>" class="form">
                        <div class="form-group form-contact">
                            <label for="">Tên Công Ty: </label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="form-group form-contact">
                            <label for="">Vị Trí: </label>
                            <input type="text" name="location" class="form-control">
                        </div>
                        <div class="form-group form-contact">
                            <label for="">Email:</label>
                            <input type="email" class="form-control" value="<%= user.email %>" disabled>
                        </div>
                        <div class="form-group form-contact">
                            <label for="">Số điện thoại:</label>
                            <input type="text" name="phoneNumber" class="form-control">
                        </div>
                        <button class="btn btn-post btn-primary btn-lg">Lưu</button>
                    </form>
                </section>
                <section id="description">
                    <div class="heading">
                        <div class="head-title">
                            <i class="fas fa-briefcase"></i>
                            <p>Mô tả công ty</p>
                        </div>
                        <button class="btn btn-outline-primary btn-add-description ml-5">Thêm mô tả</button>
                    </div>
                    <div class="description-quill">
                        <div class="quill">
                            <div class="ql-goal"></div>
                            <button class="btn btn-primary btn-save-description">Lưu</button>
                        </div>
                        
                    </div>
                    <div class="description-content"></div>
                </section>
                
            </div>
        </div>
    </div>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <%- include('partials/scripts'); -%>
    <script src="/company/company.js"></script>
</body>
</html>